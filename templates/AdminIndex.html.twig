{% extends "base.html.twig" %}


{% block title %}Inscription
{% endblock %}

{% block body %}

	{% if err == 1 %}
		<div class="alert alert-danger">
			<p class="alert">Utilisateur non enregistré</p>
		</div>
	{% endif %}

	{% if err == 2 %}
		<div class="alert alert-success">
			<p class="alert">Utilisateur enregistré</p>
		</div>
	{% endif %}

	{% if err == 3 %}
		<div class="alert alert-danger">
			<p class="alert">Utilisateur déjà  rentré</p>
		</div>
	{% endif %}

	<div class="container mt-4">
		<div class="row mt-4">
			<div class="col" style="width: 75vw;" class="justify-content-center">
				<h1>Espace Admin</h1>
			</div>
		</div>

		<div class="row mt-4">
			<div class="col">
				<button class="btn btn-primary"><a href="/admin/adduser" style="color:white;text-decoration:none"/>Ajouter un invité</a>
			</button>
		</div>
		<div class="col">
			<div class="row">
				<button class="btn btn-danger" onclick="disable()">Désactiver le site</div>
			</div>
		</div>
	</div>

	<div class="container" style="margin-top:10vh;">
		<div class="row">
			<div style="width: 75vw;" class="justify-content-center">
				{{ form(form) }}
				</div>
			</div>

		</div>

	</div>
{% endblock %}
